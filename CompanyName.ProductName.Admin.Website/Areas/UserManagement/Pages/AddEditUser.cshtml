@page
@model AddEditUserModel
@{
    ViewData["Title"] = "Add/Edit User";
}

<div class="d-flex align-items-center">
    <div class="mr-auto">
        <h3 class="m-subheader__title m-subheader__title--separator">Add/Edit User</h3>
    </div>
    <div>
        <a asp-area="UserManagement" class="btn btn-default m-menu__link" asp-page="Index">
        <i class="fa fa-arrow-left"></i>&nbsp; Back to User Management
        </a>
    </div>
</div>

<div class="clear clearfix"><br /></div>

<div class="m-portlet m-portlet--primary m-portlet--head-solid-bg">


    <div class="m-portlet__body">
        <div class="row">
            <div class="col-md-7">

                <!--Start formgroup row-->
                <div class="form-group m-form__group row">
                        <div class="col-sm-4">
                            <h5 class="mt-3"><label for="nameInput">Name</label></h5>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control m-input" id="nameInput" placeholder="Enter Name">
                        </div>
                </div>

                <!--Start formgroup row-->
                <div class="form-group m-form__group row">
                        <div class="col-sm-4">
                            <h5 class="mt-3"><label for="emailInput">Email/Username</label></h5>
                        </div>
                        <div class="col-sm-8">
                            <input type="email" class="form-control m-input" id="emailInput" placeholder="Enter Email">
                        </div>
                </div>

                <!--Start formgroup row-->
                <div class="form-group m-form__group row">
                        <div class="col-sm-4">
                            <h5 class="mt-3"><label for="passwordInput">Password</label></h5>
                        </div>
                        <div class="col-sm-8">
                            <input type="password" class="form-control m-input" id="passwordInput" placeholder="Enter Password">
                        </div>
                </div>

                <!--Start formgroup row-->
                <div class="form-group m-form__group row">
                        <div class="col-sm-4">
                            <h5 class="mt-3"><label for="repasswordInput">ReEnter Password</label></h5>
                        </div>
                        <div class="col-sm-8">
                            <input type="password" class="form-control m-input" id="repasswordInput" placeholder="ReEnter Password">
                        </div>
                </div>

                <!--Start formgroup row-->
                <div class="form-group m-form__group row">
                    <div class="col-sm-4">
                        <h5 class="mt-3"><label for="repasswordInput col-form-label">User roles</label></h5>
                    </div>
                    <div class="col-sm-8">
                        <div class="m-checkbox-list mt-3">
                            <label class="m-checkbox">
                                <input type="checkbox" checked="checked"> System Admin
                                <span></span>
                            </label>
                            <label class="m-checkbox">
                                <input type="checkbox"> Data Entry
                                <span></span>
                            </label>
                            <label class="m-checkbox">
                                <input type="checkbox"> Auditor
                                <span></span>
                            </label>
                            <label class="m-checkbox">
                                <input type="checkbox"> Accountant
                                <span></span>
                            </label>
                            <label class="m-checkbox">
                                <input type="checkbox"> Rental admin
                                <span></span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary w-100">Save</button>
                    </div>
                </div>
                    
                


            </div>

            <div class="col-md-5">
                <div class="alert m-alert m-alert--default w-100 mt-3 mt-md-0" role="alert">

                    <h5><i class="fa fa-info-circle mr-1 m--icon-font-size-lg1"></i> System admin privilleges includes</h5><br />
                    <span>
                        Settings >> Add and manage working unit type <br />
                        Settings >> Add and manage Machines
                    </span>
                </div>
            </div>
        </div>

    </div>
</div>