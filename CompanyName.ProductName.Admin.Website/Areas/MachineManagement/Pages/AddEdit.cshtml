@page
@model AddEditModel
@{
    ViewData["Title"] = "Add Machine";
}

<div class="d-flex align-items-center">
    <div class="mr-auto">
        <h3 class="m-subheader__title m-subheader__title--separator"><i class="fa fa-plus m--icon-font-size-lg3 mr-1"></i> Add Machine</h3>
    </div>
    <div>
        <a asp-area="UnitTypeManagement" class="btn btn-default m-menu__link" asp-page="Index">
            <i class="fa fa-arrow-left"></i>&nbsp; Back to Machine Management
        </a>
    </div>
</div>

<div class="clear clearfix"><br /></div>

<div class="m-portlet m-portlet--primary m-portlet--head-solid-bg">


    <div class="m-portlet__body">
        <div class="row">
            <div class="col-md-7">

                <!--Start formgroup row-->
                <div class="form-group m-form__group row">
                    <div class="col-sm-4">
                        <h5 class="mt-3"><label for="machineNameInput">Name</label></h5>
                    </div>
                    <div class="col-sm-8">
                        <input type="text" class="form-control m-input" id="machineNameInput" placeholder="">
                        <span class="m-form__help">Helper text here</span>
                    </div>
                </div>

                <!--Start formgroup row-->
                <div class="form-group m-form__group row">
                    <div class="col-sm-4">
                        <h5 class="mt-3"><label for="machineNoInput">Machine Number</label></h5>
                    </div>
                    <div class="col-sm-8">
                        <input type="text" class="form-control m-input" id="machineNoInput" placeholder="">
                        <span class="m-form__help">Helper text here</span>

                    </div>
                </div>

                <!--Start formgroup row-->
                <div class="form-group m-form__group row">
                    <div class="col-sm-4">
                        <h5 class="mt-3"><label for="opTimerInput">Openning Timer</label></h5>
                    </div>
                    <div class="col-sm-8">
                        <input type="text" class="form-control m-input" id="opTimerInput" placeholder="">
                        <span class="m-form__help">Helper text here</span>

                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary w-100">Save</button>
                    </div>
                </div>




            </div>

            <div class="col-md-5">
                <div class="alert m-alert m-alert--default w-100 mt-3 mt-md-0" role="alert">

                    <h5><i class="fa fa-info-circle mr-1 m--icon-font-size-lg1"></i> Kindly Note</h5><br />
                    <span>
                        Some notes to be added <br />
                        Notes when adding machine
                    </span>
                </div>
            </div>
        </div>

    </div>
</div>